{
  "openapi": "3.0.3",
  "info": {
    "title": "Todo App API",
    "description": "OpenAPI specification for a simple todo list app.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api/v1",
      "description": "Development"
    }
  ],
  "paths": {
    "/todos": {
      "get": {
        "tags": [
          "Todos"
        ],
        "summary": "List todo items",
        "description": "Retrieves the entire list of todo items.",
        "operationId": "listTodoItems",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/todo_item"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Todos"
        ],
        "summary": "Create todo item",
        "description": "Creates a new todo item.",
        "operationId": "createTodoItem",
        "requestBody": {
          "description": "The todo item to create.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/todo_item"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "The todo item was created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/todo_item"
                }
              }
            }
          },
          "400": {
            "description": "The request to create the todo item is not valid."
          }
        }
      }
    },
    "/todos/{id}": {
      "get": {
        "tags": [
          "Todos"
        ],
        "summary": "Fetch todo item",
        "description": "Retrieves a todo item by its ID.",
        "operationId": "fetchTodoItem",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/todo_item"
                }
              }
            }
          },
          "404": {
            "description": "No todo item exits with the given ID."
          }
        }
      },
      "put": {
        "tags": [
          "Todos"
        ],
        "summary": "Replace todo item",
        "description": "Replaces a todo item.",
        "operationId": "replaceTodoItem",
        "requestBody": {
          "description": "The new value of the todo item.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/todo_item"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "The todo item was replaced.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/todo_item"
                }
              }
            }
          },
          "400": {
            "description": "The request to replace the todo item is not valid."
          },
          "404": {
            "description": "No todo item exists with the given ID."
          }
        }
      },
      "delete": {
        "tags": [
          "Todos"
        ],
        "summary": "Delete todo item",
        "description": "Deletes a todo item.",
        "operationId": "deleteTodoItem",
        "responses": {
          "204": {
            "description": "The todo item was deleted."
          },
          "404": {
            "description": "No todo item exists with the given ID."
          }
        }
      },
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "The ID of a todo item.",
          "required": true,
          "schema": {
            "type": "integer",
            "minimum": 1
          }
        }
      ]
    }
  },
  "components": {
    "schemas": {
      "todo_item": {
        "$ref": "schema/todo_item.json"
      }
    }
  },
  "tags": [
    {
      "name": "Todos"
    }
  ]
}
